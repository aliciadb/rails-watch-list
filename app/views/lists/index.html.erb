<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>List of Movies</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <a class="btn btn-primary" href="/lists/new">Create a movie list</a>
  </div>

  <div>
    <% @lists.each do |list| %>
      <div class="card-category">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>
